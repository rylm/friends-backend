{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "sourceMap": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist"]
}
